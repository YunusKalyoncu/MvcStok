@model Mvc_Youtube.Models.TblMusteri 
@{
    ViewBag.Title = "YeniMusteri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post" class=" form-group">
    <div>
        <label>Müşteri Adı</label>
        @Html.TextBoxFor(m => m.MusteriAd, new {@class ="form-control"  })
        @Html.ValidationMessageFor(m => m.MusteriAd, "", new {@style = "color:blue" })

    </div>
    <div>
        <label>Müşteri Soyadı</label>
        <input type="text"class="form-control" name="MusteriSoyad" required/>

    </div>
    <div>
        <button class="btn btn-info" id="btn1">Müşteri Ekle</button>
    </div>
    <script>
        $('#btn1').click(function ()){
            alert('Müşteri Ekleme İşlemi Yapıldı...!');
        });
    </script>
</form>

